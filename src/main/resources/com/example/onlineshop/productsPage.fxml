<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="500.0" prefWidth="900.0" style="-fx-background-color: cacce3;" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.onlineshop.ProductsPageGraphicController">
   <children>
      <ListView fx:id="productsListView" editable="true" layoutX="34.0" layoutY="98.0" prefHeight="346.0" prefWidth="264.0" />
      <ScrollPane layoutX="330.0" layoutY="99.0" prefHeight="226.0" prefWidth="408.0">
         <content>
            <Label fx:id="selectedProduct" minHeight="200.0" prefHeight="378.0" prefWidth="408.0" style="-fx-background-color: #ffffff;">
               <font>
                  <Font name="Comic Sans MS" size="14.0" />
               </font>
               <padding>
                  <Insets left="20.0" right="20.0" />
               </padding>
               <opaqueInsets>
                  <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
               </opaqueInsets>
            </Label>
         </content>
      </ScrollPane>
      <Text layoutX="49.0" layoutY="89.0" strokeType="OUTSIDE" strokeWidth="0.0" text="⋆ Products ">
         <font>
            <Font name="Freestyle Script" size="26.0" />
         </font>
      </Text>
      <ImageView fx:id="backHome" fitHeight="30.0" fitWidth="30.0" layoutX="14.0" layoutY="14.0" onMouseClicked="#backHome" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@img/icons8-home.png" />
         </image>
      </ImageView>
      <TextField fx:id="commentBox" layoutX="330.0" layoutY="343.0" prefHeight="61.0" prefWidth="408.0" promptText="Write your comment text!" style="-fx-background-radius: 20;">
         <font>
            <Font name="Comic Sans MS" size="14.0" />
         </font>
      </TextField>
      <Pane layoutX="759.0" prefHeight="500.0" prefWidth="141.0" style="-fx-background-color: #ffffff;">
         <children>
            <Text fill="#cacce3" layoutX="56.0" layoutY="118.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Filters ">
               <font>
                  <Font name="Elephant" size="18.0" />
               </font>
            </Text>
            <RadioButton fx:id="priceFilter" layoutX="19.0" layoutY="198.0" mnemonicParsing="false" onAction="#applyFilters" text="Price">
               <font>
                  <Font name="Comic Sans MS" size="14.0" />
               </font>
               <toggleGroup>
                  <ToggleGroup fx:id="filters" />
               </toggleGroup>
            </RadioButton>
            <RadioButton fx:id="availabilityFilter" layoutX="19.0" layoutY="239.0" mnemonicParsing="false" onAction="#applyFilters" text="Availabillity" toggleGroup="$filters">
               <font>
                  <Font name="Comic Sans MS" size="14.0" />
               </font>
            </RadioButton>
            <Text fill="#cacce3" layoutX="10.0" layoutY="86.0" strokeType="OUTSIDE" strokeWidth="0.0" text="✩ More">
               <font>
                  <Font name="Elephant" size="20.0" />
               </font>
            </Text>
            <Pane fx:id="rangeGetterPane" layoutX="19.0" layoutY="334.0" prefHeight="134.0" prefWidth="102.0" style="-fx-background-color: cacce3;" visible="false">
               <children>
                  <Label layoutX="10.0" layoutY="24.0" text="start">
                     <font>
                        <Font name="Comic Sans MS" size="12.0" />
                     </font>
                  </Label>
                  <Label layoutX="11.0" layoutY="58.0" text="end">
                     <font>
                        <Font name="Comic Sans MS" size="12.0" />
                     </font>
                  </Label>
                  <Button fx:id="applyPriceRange" layoutX="25.0" layoutY="98.0" mnemonicParsing="false" onMouseClicked="#applyPriceRange" style="-fx-background-color: ffffff; -fx-background-radius: 20;" text="apply" textFill="#cacce3">
                     <font>
                        <Font name="Elephant" size="12.0" />
                     </font>
                  </Button>
                  <TextField fx:id="startOfRange" layoutX="49.0" layoutY="20.0" prefHeight="25.0" prefWidth="48.0" style="-fx-background-radius: 10;" />
                  <TextField fx:id="endOfRange" layoutX="49.0" layoutY="54.0" prefHeight="25.0" prefWidth="48.0" style="-fx-background-radius: 10;" />
               </children>
            </Pane>
         </children>
      </Pane>
      <Button fx:id="sendComment" layoutX="678.0" layoutY="413.0" mnemonicParsing="false" onMouseClicked="#sendComment" prefHeight="30.0" prefWidth="52.0" style="-fx-background-color: #000000; -fx-background-radius: 20;" text="send" textFill="#cacce3">
         <font>
            <Font name="Elephant" size="12.0" />
         </font>
      </Button>
      <Button fx:id="addProductToShoppingCart" layoutX="474.0" layoutY="444.0" mnemonicParsing="false" onMouseClicked="#addProductToShoppingCart" prefHeight="30.0" prefWidth="119.0" style="-fx-background-color: #000000; -fx-background-radius: 20;" text="BUY" textFill="#cacce3">
         <font>
            <Font name="Elephant" size="12.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
